{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "repository": "https://github.com/react-cosmos/react-cosmos",
  "license": "MIT",
  "scripts": {
    "install-react": "yarn remove react react-dom && yarn add",
    "install-react:0.14": "yarn install-react -- react@^0.14.9 react-dom@^0.14.9",
    "install-react:15": "yarn install-react -- react@^15.5.4 react-dom@^15.5.4",
    "prettify": "prettier --write \"{{packages/*/src,examples,cypress,scripts}/**/,}*.{js,jsx,ts,tsx,css,less,md}\"",
    "lint": "eslint \"**/*.js\" && tslint --project tsconfig.json",
    "test:unit": "jest --config .jest/config.js",
    "test:watch": "yarn test:unit --watch",
    "test:ts:unit": "jest --config .jest/config.ts.js",
    "test:ts:watch": "yarn test:ts:unit --watch",
    "test": "yarn flow && yarn lint && yarn test:unit --coverage && yarn test:ts:unit --coverage",
    "test:e2e": "cypress run --record false",
    "start": "ts-node ./packages/react-cosmos/bin/cosmos --config examples/local-state/cosmos.config.js",
    "start:next": "ts-node ./packages/react-cosmos/bin/cosmos --config examples/jsx-fixtures/cosmos.config.js",
    "start:playground": "ts-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground/cosmos.config.js",
    "start:playground:next": "ts-node ./packages/react-cosmos/bin/cosmos.js --config packages/react-cosmos-playground2/cosmos.config.js",
    "build:clear": "ts-node ./scripts/clearBuild.ts",
    "build": "ts-node ./scripts/build.ts",
    "link-entries": "ts-node ./scripts/linkEntries.ts",
    "src": "yarn link-entries src",
    "dist": "yarn link-entries dist",
    "release:check": "yarn build:clear && yarn build && yarn link-entries src && yarn flow && yarn lint && yarn link-entries dist && yarn test:ts:unit && yarn test:unit",
    "release:lerna": "lerna publish --registry=https://registry.npmjs.org/",
    "release": "yarn release:check && yarn release:lerna",
    "release:next": "yarn release:check && yarn release:lerna --dist-tag=next"
  },
  "lint-staged": {
    "*.{js,jsx,css,less}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@react-mock/state": "^0.1.8",
    "@skidding/async-retry": "^2.0.0",
    "@types/child-process-promise": "^2.2.1",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/micromatch": "^3.1.0",
    "@types/query-string": "^6.3.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-is": "^16.7.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/rimraf": "^2.0.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/styled-components": "^4.1.12",
    "@types/util.promisify": "^1.0.0",
    "@types/yargs": "^12.0.10",
    "after-pending-promises": "^0.0.1",
    "after-pending-timers": "^0.0.1",
    "async-until": "^2.0.0",
    "chalk": "^2.4.2",
    "child-process-promise": "^2.2.0",
    "codecov": "^3.1.0",
    "cpy": "^7.1.0",
    "create-react-class": "^15.6.3",
    "css-loader": "^2.1.0",
    "cypress": "^3.1.5",
    "delay": "^4.1.0",
    "eslint": "^5.13.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "eventsource": "^1.0.7",
    "file-loader": "^2.0.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "jest-dom": "^3.1.3",
    "lerna": "^3.10.8",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "lint-staged": "^8.1.3",
    "prettier": "1.16.4",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-native": "^0.55.4",
    "react-test-renderer": "^16.8.6",
    "react-testing-library": "^6.0.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3333",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "yargs": "^12.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn dist && lint-staged"
    }
  }
}
